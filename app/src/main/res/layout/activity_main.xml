<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:fab="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent"
        tools:context=".MainActivity" android:id="@+id/coordinatorLayout">

    <com.google.android.material.appbar.AppBarLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay" android:id="@+id/appBarLayout"
            tools:ignore="MissingConstraints">
    </com.google.android.material.appbar.AppBarLayout>

    <include layout="@layout/content_main" android:paddingBottom="20dp"
             android:layout_height="732dp"
             android:layout_width="410dp" android:id="@+id/include"
             app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintVertical_bias="0.0" app:layout_constraintHorizontal_bias="1.0"/>

    <com.getbase.floatingactionbutton.FloatingActionsMenu
            android:layout_height="185dp"
            android:layout_width="347dp" tools:ignore="MissingConstraints"
            app:fab_expandDirection="up"
            app:fab_labelsPosition="left"
            app:fab_labelStyle="@style/LabelStyle" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/toExpense"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                app:fab_icon="@drawable/ic_expense"
                android:tint="@android:color/black"
                app:fab_colorNormal="#FFF"
                app:fab_size="normal"
                app:fab_title="Add New Expense">
        </com.getbase.floatingactionbutton.FloatingActionButton>

        <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/toIncome"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                app:fab_icon="@drawable/ic_income"
                android:tint="@android:color/black"
                app:fab_colorNormal="#FFF"
                app:fab_size="normal"
                app:fab_title="Add New Income">
        </com.getbase.floatingactionbutton.FloatingActionButton>
    </com.getbase.floatingactionbutton.FloatingActionsMenu>

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="412dp"
            android:layout_height="65dp"
            android:background="@color/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" app:layout_anchorGravity="bottom|center"
            app:layout_anchor="@+id/appBarLayout" app:titleTextColor="@color/cardview_light_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" app:title="Money Manager"/>

</androidx.constraintlayout.widget.ConstraintLayout>